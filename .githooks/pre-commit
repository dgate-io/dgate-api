#!/bin/sh
# Pre-commit hook for dgate
# Runs rustfmt and clippy before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust."
    exit 1
fi

# Get list of staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -z "$STAGED_RS_FILES" ]; then
    echo "âœ… No Rust files staged, skipping checks."
    exit 0
fi

echo "ğŸ“ Checking formatting with rustfmt..."
if ! cargo fmt -- --check; then
    echo ""
    echo "âŒ Formatting issues found!"
    echo "   Run 'cargo fmt' to fix them, then stage the changes."
    exit 1
fi
echo "âœ… Formatting OK"

echo ""
echo "ğŸ‰ All pre-commit checks passed!"
